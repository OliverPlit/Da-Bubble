# Allow direct access to static files
<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # Don't rewrite files that exist
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # Don't rewrite requests for icons, fonts, or other assets
  RewriteRule ^(img|fonts)/ - [L]

  # Rewrite everything else to index.html for Angular routing
  RewriteRule ^index\.html$ - [L]
  RewriteRule . /index.html [L]
</IfModule>

# Enable CORS for fonts
<IfModule mod_headers.c>
  <FilesMatch "\.(ttf|otf|woff|woff2|eot)$">
    Header set Access-Control-Allow-Origin "*"
  </FilesMatch>
</IfModule>
